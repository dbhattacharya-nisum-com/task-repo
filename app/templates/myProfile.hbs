<h5>My Profile</h5>
<div class="emp-profile">
    <div class="grid-x grid-margin-x">
        <div class="cell small-5">
            <label for="">Employee ID</label>
        </div>
        <div class="cell small-5">
            <input type="number" maxlength="10" id="empId" name="empId" placeholder="Enter 6 digit ID">
        </div>
    </div>
    <div class="grid-x grid-margin-x">
        <div class="cell small-4 control-group ">
            <div class="grid-x grid-margin-x">
                <div class="cell small-4 control-group gender">
                        <label class="mandatory">Gender</label>
                        <select name="gender" id="gender">
                            <option value="">Select</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="cell small-4 control-group maritalStatus">
                        <label class="mandatory" for="Marital Status">MaritalStatus</label>
                        <select name="maritalStatus" id="maritalStatus">
                            <option value="">Select</option>
                            <option value="Married">Married</option>
                            <option value="Un Married">Un Married</option>
                            <option value="Single">Single</option>
                        </select>
                    </div>
                    <div class="cell small-4 control-group bloodGroup">
                        <label class="mandatory" for="bloodGroup">Blood-Group</label>
                        <select name="bloodGroup" id="bloodGroup">
                            <option value="">Select</option>
                            <option value="A+ve">A+ve</option>
                            <option value="A-ve">A-ve</option>
                            <option value="B+ve">B+ve</option>
                            <option value="B-ve">B-ve</option>
                            <option value="AB+ve">AB+ve</option>
                            <option value="AB-ve">A-ve</option>
                            <option value="O+ve">O+ve</option>
                            <option value="O-ve">O-ve</option>
                        </select>
                    </div>
            </div>
        </div>
        <div class="cell small-4 control-group designation">
            <label class="mandatory" for="Date-Of-Joining">Designation</label>
            <input type="text" id="designation" name="designation" placeholder="Designation">
        </div>
        <div class="cell small-4 control-group location" >
            <label for="location">Location</label>
            <input type="text" id="location" name="location" placeholder="Location">						
        </div>
    </div>
    <div class="grid-x grid-margin-x">
        <div class="cell small-4 control-group dob">
            <label class="mandatory" for="D.O.B">D.O.B</label>
            <input type="date" id="dob" name="dob" placeholder="D.O.B" >
        </div>
        <div class="cell small-4 control-group dateOfJoining">                        
            <label class="mandatory" for="dateOfJoining">Date-Of-Joining</label>
            <input type="date" id="dateOfJoining" name="dateOfJoining" placeholder="Date-Of-Joining" >
        </div>
        <div class="cell small-4 control-group dateOfReleiving">
            <label class="mandatory" for="Date-Of-Relieving">Date-Of-Relieving</label>
            <input type="date" id="dateOfReleiving" name="dateOfReleiving" placeholder="Date-Of-Relieving" >
        </div>
    </div>
    <div class="grid-x grid-margin-x">
        <div class="cell small-4 control-group email">
            <label class="mandatory" for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter Valid Email">
        </div>
        <div class="cell small-4 control-group panCard">
            <label class="mandatory" for="PAN-CARD">Pan-Card</label>
            <input type="text" id="panCard" name="panCard" placeholder="Pan-Card" >
        </div>
        <div class="cell small-4 control-group aadharCard">
            <label class="mandatory" for="Aadhar-Card-Number">Aadhar-Card-Number</label>
            <input type="text" id="aadharCard" name="aadharCard" placeholder="Enter 12 Digit Number">
        </div>
    </div>
    <div class="grid-x grid-margin-x">
        <div class="cell small-4 control-group passportNo">
            <label class="mandatory" for="Pass-Port-Number">Pass-Port-Number</label>
            <input type="text" id="passportNo" name="passportNo" placeholder="Pass-Port-Number">
        </div>
        <div class="cell small-4 control-group passportIssueDate">
            <label class="mandatory" for="PassPort-IssueDate">PassPort-IssueDate</label>
            <input type="date" id="passportIssueDate" name="passportIssueDate" placeholder="PassPort-IssueDate">
        </div>
        <div class="cell small-4 control-group passportExpDate">
            <label class="mandatory" for="passport-ExpiryDate">PassPort-ExpiryDate</label>
            <input type="date" id="passportExpDate" name="passportExpDate" placeholder="PassPort-ExpiryDate" >
        </div>
    </div>
    <div class="nav clearfix text-center"><br />
        <button type="button" class="prev button small" id="">Save</button>
        <button type="button" class="next secondary button small">Cancle</button>
    </div>
</div>
</div>