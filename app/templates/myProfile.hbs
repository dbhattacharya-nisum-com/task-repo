<h5>My Profile</h5>
<div class="user-profile">
    <i class="fa fa-user-circle-o right profile-icon" aria-hidden="true"></i>
    <div class="profile">
        <div class="grid-x grid-margin-x">
            <div class="cell small-3">
                <label for="">Employee ID</label>
            </div>
            <div class="cell small-9">
                <h4>{{eid}}</h4>
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-3">
                <label for="">Employee Name</label>
            </div>
            <div class="cell small-9">
                <h5>{{name}}</h5>
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-3">
                <label for="">Designation</label>
            </div>
            <div class="cell small-9" >
                {{designation}}
            </div>
        </div>

        <div class="grid-x grid-margin-x details">
            <div class="cell small-2">
                <label for="">Experience</label>
            </div>
            <div class="cell small-4" >
                {{experience}}
            </div>
            <div class="cell small-2">
                <label for="">Email</label>
            </div>
            <div class="cell small-4" >
                {{email}}
            </div>
        </div>
        <div class="grid-x grid-margin-x details">
            <div class="cell small-2">
                <label for="">Date of Joining</label>
            </div>
            <div class="cell small-4" >
                {{doj}}
            </div>
            <div class="cell small-2">
                <label for="">Date of Birth</label>
            </div>
            <div class="cell small-4" >
                {{dob}}
            </div>
        </div>
        <div class="clearfix text-center">
            <button type="button" class="prev button small" id="editButton">Edit Profile</button>
        </div>
    </div>

    <!-- Edit Profile Markup -->
    <div class="profileInfo" style="display: none">
    <div class="profileDetails">
        <h5>Edit View</h5><br /><br />
        <div class="grid-x grid-margin-x">
            <div class="cell small-3">
                <label>Employee ID</label>
            </div>
            <div class="cell small-3">
                <input type="text" id="eid" name="eid" value="{{eid}}" disabled>
            </div>
        </div>
        <form id="formData">
            <div class="grid-x grid-margin-x">
                <div class="cell small-3">
                    <label for="fullName">Employee Name</label>
                </div>
                <div class="cell small-3">
                    <input type="text" id="fullName" name="fullName" value="{{name}}">
                </div>
                <div class="cell small-2">
                    <label for="designation">Designation</label>
                </div>
                <div class="cell small-4">
                    <input type="text" id="designation" name="designation" value="{{designation}}">
                </div>
            </div>

            <div class="grid-x grid-margin-x">
                <div class="cell small-3">
                    <label for="experience">Experience</label>
                </div>
                <div class="cell small-3">
                    <input type="text" id="experience" name="experience" value="{{experience}}">
                </div>
                <div class="cell small-2">
                    <label for="email">Email</label>
                </div>
                <div class="cell small-4">
                    <input type="text" id="email" name="email" value="{{email}}">
                </div>
            </div>

            <div class="grid-x grid-margin-x">
                <div class="cell small-3">
                    <label for="doj">Date of Joining</label>
                </div>
                <div class="cell small-3">
                    <input type="date" id="doj" name="doj" value="{{doj}}">
                </div>
                <div class="cell small-2">
                    <label for="dob">Date of Birth</label>
                </div>
                <div class="cell small-4">
                    <input type="date" id="dob" name="dob" value="{{dob}}">
                </div>
            </div>

            <div class="clearfix text-center">
                <button type="button" class="button small" id="saveButton">Save</button>
                <button type="button" class="secondary button small" id="cancelButton">Cancel</button>
            </div>
        </form>
        </div>
    </div>
</div>
